<%- model_class = Blocked -%>
<div class="page-header">
  <h1><%=t '.title', :default => Blocked %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ip) %></dt>
      <dd><pre class="prettyprint"><%= @blocked.ip %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:domain) %></dt>
      <dd><pre class="prettyprint"><%= @blocked.domain %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email) %></dt>
      <dd><pre class="prettyprint"><%= @blocked.email %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              blockeds_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_blocked_path(@blocked), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              blocked_path(@blocked),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

