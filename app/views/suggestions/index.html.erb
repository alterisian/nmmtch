<%- model_class = Suggestion -%>
<div class="page-header">
  <h1><%=t '.title', :default => Suggestion %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:user_1) %></th>
      <th><%= model_class.human_attribute_name(:user_2) %></th>
      <th><%= model_class.human_attribute_name(:accepted_by_user_1) %></th>
      <th><%= model_class.human_attribute_name(:accepted_by_user_2) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @suggestions.each do |suggestion| %>
      <tr>
        <td><%= suggestion.id %></td>
        <td><%= suggestion.user_1 %></td>
        <td><%= suggestion.user_2 %></td>
        <td><%= suggestion.accepted_by_user_1 %></td>
        <td><%= suggestion.accepted_by_user_2 %></td>
        <td><%=l suggestion.created_at, format: :long %></td>
        <td>
          <%= link_to suggestion_path(suggestion), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to suggestion_path(suggestion), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_suggestion_path,
            :class => 'btn btn-primary' %>
